{% extends 'base.html.twig' %}

{% block content %}
<h1>Résultat(s) de votre recherche :</h1>
<ul>
{% for p in produits %}
    <li>{{ p.nom }}</li>
    <li>{{ p.description }}</li>
    <li>{{ p.prix }} €</li>
    <li>{{ p.stock }} kgs</li>
    <li>{% if p.boutiqueId is not null %}Boutique : {{ p.boutiqueId.nomBoutique }} {% endif %}</li>
    <li>Produit disponible dans la boutique : 
        

    </li>
    {# <li> vous dans le $user->getDepartement </li> #}

</ul>
<a class="btn btn-success" href="{{ path('buy/show_shop', {id : p.boutiqueId.id}) }}">Aller sur la boutique</a>  
{% endfor %}
{% endblock %}