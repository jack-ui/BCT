{% extends 'base.html.twig' %}

{% block content %}

<div class='banniere_form'>
        <h2 class="card-header info-color white-text text-center py-4">
            Quelques unes de nos boutiques :
        </h2>
    </div>

{% for boutique in boutiques %}  
{# <div><img src="{{ asset('/photo/' ~ boutique.photo) }}" alt=" photo de la boutique"></img></div>  #}

<div class="col-md-4 offset-md-2 my-4" style="margin-bottom: 10px;">
    <div class="card h-100">
        <div class="card-body text-center">
            <h4 class="card-title text-info">
				{{ boutique.nomBoutique }}
            </h4>
            <p class="card-text"><strong>Description  : </strong>{{ boutique.description  }}</p>
            <p class="card-text"><strong>Livraison  : </strong>{{ boutique.livraison  }}</p>
            <p class="card-text"><strong>Mode de paiement  : </strong>{{ boutique.paiement  }}</p>
            <p class="card-text"><strong>Département  : </strong>{{ boutique.departement  }}</p>
            <p class="card-text"><strong>Région  : </strong>{{ boutique.region  }}</p>
        </div>
		<div class="card-footer">
			<a class="btn btn-outline-success my-2 my-sm-2" href="{{ path('buy/show_shop', { id: boutique.id}) }}" class="alert-link text-dark">Accés à la boutique </a>
        </div>
	</div>
</div>


