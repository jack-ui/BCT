{% extends 'base.html.twig' %}

{% block content %}

<h1>Tableau de gestion des Boutiques</h1>

<div class="row p-3">
        <a href="{{ path('admin/shop_add') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i>
            Ajouter une boutique</a>
        <a href="{{ path('admin') }}" class="btn btn-warning">
            Retour dashboard</a> 
    </div>


    <table class="table table-stripped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Siret</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Livraison</th>
                <th>Paiement</th>
                {# <th>Photo</th> #}
                <th>Adresse</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Département</th>
                <th>Région</th>
                <th>Téléphone</th>
                <th colspan="3">Actions</th>
                
            </tr>
        </thead>


        <tbody>

            {% for b in boutiques %}

                <tr>
                    <td>{{ b.id }}</td>
                    <td>{{ b.siret }}</td>
                    <td>{{ b.nomBoutique }}</td>
                    <td>{{ b.description }}</td>
                    <td>{{ b.livraison }}</td>
                    <td>{{ b.paiement }}</td>
                    {# <td><img src="{{ asset('/photo/' ~ b.photo) }}" alt=" photo d'une boutique"></img></td>  #}
                    <td>{{ b.adresse }}</td>
                    <td>{{ b.codePostal }}</td>
                    <td>{{ b.ville }}</td>
                    <td>{{ b.departement }}</td>
                    <td>{{ b.region }}</td>
                    <td>{{ b.telephone }}</td>
               
                    <td>
                        <a  href="{{ path('admin/show_shop', {id : b.id } ) }}">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('admin/shop_update', {id : b.id } ) }}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('admin/shop_delete', {id : b.id } ) }}" onclick="return confirm('Etes-vous certain de vobloir sbpprimer le prodbit')">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>

            {% endfor %}

        </tbody>

    </table>

{% endblock %}