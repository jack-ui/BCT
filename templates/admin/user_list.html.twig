{% extends 'base.html.twig' %}

{% block content %}

<h1>Tableau de gestion des User</h1>

<div class="row p-3">
        <a href="{{ path('admin_user_add') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i>
            Ajouter un user</a>
    </div>


    <table class="table table-stripped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Statut</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Pseudo</th>
                <th>Adresse</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Téléphone</th>
                <th>Date de naissance</th>
                <th>Genre</th>
                <th colspan="3">Actions</th>
                
            </tr>
        </thead>


        <tbody>

            {% for u in users %}

                <tr>
                    <td>{{ u.id }}</td>
                    <td>{{ u.statut }}</td>
                    <td>{{ u.nom }}</td>
                    <td>{{ u.prenom }}</td>
                    <td>{{ u.adresse }}</td>
                    <td>{{ u.codePostal }}</td>
                    <td>{{ u.ville }}</td>
                    <td>{{ u.telephone }}</td>
                    <td>{{ u.dateNaissance | date('//') }}</td>
                    <td>{{ u.sexe }}</td>
                    
                    
                    
                    <td>
                        <a target="_blank" href="{{ path('admin_user', {id : u.id } ) }}">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('admin_user_update', {id : u.id } ) }}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('admin_user_delete', {id : u.id } ) }}" onclick="return confirm('Etes-vous certain de vouloir supprimer le produit')">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>

            {% endfor %}

        </tbody>

    </table>

{% endblock %}